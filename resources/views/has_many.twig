{# pregunta \Intisana\Encuesta\Pregunta\HasMany #}
<script type="text/javascript">
	$(document).ready(function () {
		$('#encuesta').submit(function() {
			var checked = $("input[class=pregunta-{{ pregunta.serial }}]:checked").length;

			if(!checked) {
				alert("Debes seleccionar mínimo una opción en la pregunta: {{ pregunta.orden }}");
				return false;
			}

		});
	});

</script>
<div class="panel">
	<div class="panel-heading">
		<h3 class="panel-title">{{ pregunta.orden }}) {{ pregunta.titulo }} <small style="color: black">(Puedes elegir más de una opción)</small></h3>
	</div>
	<div class="panel-body">
		{% for opcion in pregunta.datos %}
			<div class="checkbox">
				<label>
					<input class="pregunta-{{ pregunta.serial }}" type="checkbox" name="preguntas[{{ pregunta.serial }}][]" value="{{ opcion[0] }}">&nbsp;&nbsp;&nbsp;{{ opcion[0] }}
				</label>
			</div>
		{% endfor %}
	</div>
</div>