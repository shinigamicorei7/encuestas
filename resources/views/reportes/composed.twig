{# pregunta \Intisana\Encuesta\Pregunta\Composed #}
<script type="text/javascript">
	$(function ()
	{
		var options = {{ options|raw }};
		$("#chartContainer-{{ pregunta.serial }}").CanvasJSChart(options);
	});
</script>
<div class="panel">
	<div class="panel-heading">
		<h3 class="panel-title">{{ pregunta.orden }})
			<small style="color: black">- Compuesta</small>
		</h3>
	</div>
	<div class="panel-body">
		<div class="col-md-6">
			<table class="table table-condensed table-bordered table-striped">
				<thead>
				<tr>
					<th rowspan="2" style="vertical-align: middle!important;">Nº</th>
					<th rowspan="2" style="vertical-align: middle!important;">{{ pregunta.titulo }}</th>
					<th rowspan="2" style="vertical-align: middle!important;">Votos</th>
					<th colspan="3">{{ pregunta.subPregunta }}</th>
				</tr>
				<tr>
					<th>M&iacute;nimo</th>
					<th>M&aacute;ximo</th>
					<th>Promedio</th>
				</tr>
				</thead>
				<tbody>
				{% for opcion in pregunta.datos %}
					<tr>
						<th>{{ loop.index }}</th>
						<td>{{ opcion[0] }}</td>
						<td class="text-center">{{ opcion.contador }}</td>
						<td class="text-center">{{ opcion.detalle | min_mod }}</td>
						<td class="text-center">{{ opcion.detalle | max_mod }}</td>
						<td class="text-center">{{ opcion.detalle|promedio(1) }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading text-center"><span class="panel-title ">Gr&aacute;fico</span></div>
				<div class="panel-body">
					<div id="chartContainer-{{ pregunta.serial }}" style="height: 350px; width: 100%;"></div>
				</div>
			</div>
		</div>
	</div>
</div>